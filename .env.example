# Application Configuration
NODE_ENV=development
APP_PORT=4002
API_PREFIX=api

# Database Configuration (Neon PostgreSQL)
# Option 1: Use DATABASE_URL (Recommended for Neon)
DATABASE_URL=postgresql://username:password@ep-xxxxx-xxxxx-pooler.us-east-1.aws.neon.tech/dbname?sslmode=require&channel_binding=require

# Option 2: Use individual connection parameters (if DATABASE_URL is not set)
DATABASE_TYPE=postgres
DATABASE_HOST=ep-xxxxx-xxxxx-pooler.us-east-1.aws.neon.tech
DATABASE_PORT=5432
DATABASE_USERNAME=your-username
DATABASE_PASSWORD=your-password
DATABASE_NAME=your-db-name

# Database Settings
DATABASE_SYNCHRONIZE=true
DATABASE_MAX_CONNECTIONS=100
DATABASE_SSL_ENABLED=true
DATABASE_REJECT_UNAUTHORIZED=false

# Mail Configuration (Gmail/Nodemailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_SECURE=false
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=Brewly

# JWT Configuration
AUTH_SECRET=your-jwt-secret-key-min-32-characters-change-in-production
AUTH_EXPIRES=30d

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=4500
